<body>
    <div class="container">
        <h1>Array Iteration with Callback</h1>
        <p>Watch the output below as the callback function processes each number in the array.</p>
        <div id="output"></div>
    </div>
    <script>
        function processArrayWithCallback(numbers, callback) {
            const outputDiv = document.getElementById('output');
            outputDiv.innerHTML = ''; 
            if (!Array.isArray(numbers)) {
                outputDiv.innerHTML = '<p style="color: red;">Error: First argument must be an array.</p>';
                return;
            }
            if (typeof callback !== 'function') {
                outputDiv.innerHTML = '<p style="color: red;">Error: Second argument must be a function.</p>';
                return;
            }
            numbers.forEach(number => {
                callback(number, outputDiv); 
            });
        }
        function doubleAndDisplay(number, outputElement) {
            const doubledNumber = number * 2;
            outputElement.innerHTML += `<p>Original: ${number}, Doubled: ${doubledNumber}</p>`;
        }
        function squareAndDisplay(number, outputElement) {
            const squaredNumber = number * number;
            outputElement.innerHTML += `<p>Original: ${number}, Squared: ${squaredNumber}</p>`;
        }
        const myNumbers = [1, 2, 3, 4, 5];
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('output').innerHTML = '<h2>Processing with Doubling Callback:</h2>';
            processArrayWithCallback(myNumbers, doubleAndDisplay);
            setTimeout(() => {
                document.getElementById('output').innerHTML += '<hr><h2>Processing with Squaring Callback:</h2>';
                processArrayWithCallback(myNumbers, squareAndDisplay);
            }, 2000); 
        });
    </script>
</body>
</html>
