  <h2>Simple Function Example</h2>
  <button onclick="greet()">Click to Greet</button>
  <p id="message"></p>
  <script>
    function greet() {
      document.getElementById("message").innerHTML = "Welcome !";
      console.log("Welcome !"); 
    }
  </script>
