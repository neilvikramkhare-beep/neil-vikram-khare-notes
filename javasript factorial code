<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Factorial Calculator</title>
</head>
<body>
    <h1>Factorial Calculator</h1>
    <p id="output"></p>
    <script>
        function factorial(n) {
            if (n < 0) {
                return "Factorial is not defined for negative numbers.";
            }
            let result = 1;
            for (let i = 2; i <= n; i++) {
                result *= i;
            }
            return result;
        }
        function main() {
            const number = 10; 
            const result = factorial(number);
            const output = `Factorial of ${number} is: ${result}`;
            console.log(output);
            document.getElementById("output").textContent = output;
        }
        window.onload = main;
    </script>
</body>
</html>
