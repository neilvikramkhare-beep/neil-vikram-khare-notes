!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smooth Quiz Transitions</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f0f0f0;
            margin: 0;
        }
        .quiz-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 600px;
            overflow: hidden;
            position: relative;
        }
        .question-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            padding: 30px;
            box-sizing: border-box;
            opacity: 0;
            transform: translateX(100%);
            transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
        }
        .question-slide.active {
            opacity: 1;
            transform: translateX(0);
            position: relative;
        }
        .question-slide.leaving {
            transform: translateX(-100%);
            opacity: 0;
        }
        h2 {
            margin-top: 0;
            color: #333;
        }
        .options-container label {
            display: block;
            margin-bottom: 10px;
            padding: 10px;
            background-color: #e9e9e9;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .options-container label:hover {
            background-color: #dcdcdc;
        }
        button {
            display: block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="quiz-container">
        <div id="quiz-content">
            <!-- Questions will be dynamically loaded here -->
        </div>
        <button id="next-btn">Next Question</button>
    </div>

    <script>
        const quizQuestions = [
            {
                question: "What is the capital of France?",
                options: ["Berlin", "Madrid", "Paris", "Rome"],
                answer: "Paris"
            },
            {
                question: "Which planet is known as the Red Planet?",
                options: ["Earth", "Mars", "Jupiter", "Venus"],
                answer: "Mars"
            },
            {
                question: "What is 2 + 2?",
                options: ["3", "4", "5", "6"],
                answer: "4"
            }
        ];
        let currentQuestionIndex = 0;
        const quizContent = document.getElementById('quiz-content');
        const nextButton = document.getElementById('next-btn');
        function displayQuestion() {
            const currentQuestion = quizQuestions[currentQuestionIndex];
            const newQuestionSlide = document.createElement('div');
            newQuestionSlide.classList.add('question-slide');
            let optionsHtml = '';
            currentQuestion.options.forEach(option => {
                optionsHtml += `
                    <label>
                        <input type="radio" name="answer" value="${option}">
                        ${option}
                    </label>
                `;
            });
            newQuestionSlide.innerHTML = `
                <h2>${currentQuestion.question}</h2>
                <div class="options-container">
                    ${optionsHtml}
                </div>
            `;
            const existingSlide = quizContent.querySelector('.question-slide.active');
            if (existingSlide) {
                existingSlide.classList.remove('active');
                existingSlide.classList.add('leaving');
                existingSlide.addEventListener('transitionend', () => {
                    existingSlide.remove();
                }, { once: true });
            }
            quizContent.appendChild(newQuestionSlide);
            setTimeout(() => {
                newQuestionSlide.classList.add('active');
            }, 50);
        }
        nextButton.addEventListener('click', () => {
            currentQuestionIndex++;
            if (currentQuestionIndex < quizQuestions.length) {
                displayQuestion();
            } else {
                quizContent.innerHTML = '<h2>Quiz Finished!</h2>';
                nextButton.style.display = 'none';
            }
        });
        displayQuestion();
    </script>
</body>
</html>

