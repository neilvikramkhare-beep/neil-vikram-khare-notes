<body>
  <h1>Concurrent API Requests</h1>
  <p>Click the button below to fetch data from multiple APIs concurrently.</p>
  <button id="fetchBtn">Fetch Data</button>
  <pre id="output">Results will appear here...</pre>
  <script>
    async function fetchMultipleAPIs(urls) {
      try {
        const requests = urls.map(url => fetch(url).then(res => res.json()));
        const results = await Promise.all(requests);
        const mergedResults = results.flat();
        return mergedResults;
      } catch (error) {
        console.error("Error fetching APIs:", error);
        throw error;
      }
    }
    document.getElementById("fetchBtn").addEventListener("click", async () => {
      const output = document.getElementById("output");
      output.textContent = "Fetching data...";
      const urls = [
        "https://jsonplaceholder.typicode.com/posts",
        "https://jsonplaceholder.typicode.com/comments",
        "https://jsonplaceholder.typicode.com/users"];
      try {
        const data = await fetchMultipleAPIs(urls);
        output.textContent = JSON.stringify(data.slice(0, 10), null, 2) + "\n\n(Showing first 10 items)";
      } catch (err) {
        output.textContent = "Error fetching data: " + err;
      }
    });
  </script>

</body>
