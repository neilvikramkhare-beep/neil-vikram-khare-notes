<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Search Number in List</title>
</head>
<body>
  <h1>Search Number in a List</h1>
  <p>List: <span id="numberList"></span></p>
  <label for="searchInput">Enter number to search:</label>
  <input type="number" id="searchInput" />
  <button onclick="searchNumber()">Search</button>
  <p id="result"></p>
  <script>
    const numbers = [10, 23, 45, 70, 11, 15];
    document.getElementById('numberList').textContent = numbers.join(', ');
    function searchNumber() {
      const target = Number(document.getElementById('searchInput').value);
      const resultEl = document.getElementById('result');
      let found = false;
      for (let i = 0; i < numbers.length; i++) {
        if (numbers[i] === target) {
          resultEl.textContent = `Number ${target} found at index ${i}.`;
          found = true;
          break;
        }
      }
      if (!found) {
        resultEl.textContent = `Number ${target} not found in the list.`;
      }
    }
  </script>
</body>
</html>
