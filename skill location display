<body>
    <div class="container">
        <h1>Enter Your Location</h1>
        <input type="text" id="locationInput" placeholder="e.g., New York City, USA">
        <button onclick="saveLocation()">Save Location</button>
        <p id="displayLocation"></p>
    </div>
    <script>
        function saveLocation() {
            const locationInput = document.getElementById('locationInput');
            const displayLocation = document.getElementById('displayLocation');
            const userLocation = locationInput.value.trim();
            if (userLocation) {
                displayLocation.textContent = `Your location: ${userLocation}`;
                console.log("User entered location:", userLocation);
            } else {
                displayLocation.textContent = "Please enter a location.";
            }
        }
    </script>
